<div class="container mt-5">
    <h2 class="text-center mb-3 bg-dark text-white rounded py-1">Log in</h2>
    <div class="bg-light rounded p-3 mt-3">
        <%= form_for(:session, url: login_path) do |f| %>
            <div class="row mb-3">
                <div class="col-lg-3"><%= f.label :email, for: "email", class: "form-label" %></div>
                <div class="col-lg-9"><%= f.email_field :email,class: "form-control", id: "email", placeholder:"Enter your email", autofocus: true %></div>
            </div>
            <div class="row mb-3">
                <div class="col-lg-3"><%= f.label :password, for: "password", class: "form-label" %></div>
                <div class="col-lg-9"><%= f.password_field :password, class: "form-control", id: "password", placeholder:"Enter your password", autocomplete: "off" %></div>
            </div>
            <div class="row mb-3 px-3">
                <%= f.submit("Log In", class: "btn btn-primary mt-3") %> 
            </div>
        <% end %>
    </div>
</div>