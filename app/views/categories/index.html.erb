<div class="container mt-5">
    <h2 class="mb-3 bg-dark text-white rounded ps-3 py-2"><em>Listing All Categories</em></h2>

        <nav class="d-flex justify-content-center mt-4 mb-5">
            <%= will_paginate(renderer: BootstrapPagination::Rails) %>
        </nav>
        <div class="container d-flex flex-wrap justify-content-center w-50">
            <% @categories.each do |category| %>

                <%= link_to "#{category.name}", category_path(category), class: "btn btn-success px-2 rounded me-2 mb-3" %>

            <% end %>
        </div>
</div>