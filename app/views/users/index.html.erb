<div class="container my-5 text-center">
    <h2 class="mb-3 bg-dark text-white rounded py-2"><em>Alpha Bloggers List</em></h2>
    <nav class="d-flex justify-content-center mt-4 mb-5">
        <%= will_paginate(renderer: BootstrapPagination::Rails) %>
    </nav>
    <% @users.each do |user| %>
        <div class="row text-center bg-light rounded py-2 mb-3">
            <div class="col-4 d-flex justify-content-center align-items-center">
                <%= link_to gravatar_for(user, size: 50), user_path(user) %>
            </div>
            <div class="col-4 display-4 bg-warning rounded py-3 d-flex justify-content-center align-items-center">
                <em><%= link_to user.username, user_path(user) %></em>
            </div>
            <div class="col-4 d-flex justify-content-center align-items-center">
                <span class="bg-danger text-white p-2 rounded"><%= pluralize(user.articles.count, "article") if user.articles %></span>
            </div>
        </div>
    <% end %>
    <nav class="d-flex justify-content-center mt-5 mb-4">
        <%= will_paginate(renderer: BootstrapPagination::Rails) %>
    </nav>
</div>