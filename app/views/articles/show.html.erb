<div class="container">
    <h2 class="text-white bg-dark mt-5 mb-2 px-3 py-2 rounded"><%= @article.title %></h2>
    <div class="bg-light p-3 rounded">
        <p class="fs-6 lh-base"><%= @article.description %></p>
        <p class="text-success mb-5"><strong>Published:</strong> <small><%= @article.created_at %></small></p>
        <div class="text-center my-3">
            <%= link_to 'Edit this article', 
            edit_article_path(@article.id), 
            class: "btn btn-warning me-3" %> 
            <%= link_to "Back to articles listing", 
            articles_path, 
            class: "btn btn-primary" %>
        </div>
    </div>
</div>